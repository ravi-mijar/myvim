execute pathogen#infect()

set number   "This sets line numbers"
filetype on  "This sets the syntax for filetypes"
syntax on "This sets syntax on"
set hlsearch  "This highlights searches"
color dracula  "Theme"
set colourcolumn 90 "Sets a column at 90 chars"

filetype indent on  "Sets file indentation"
set nowrap
set tabstop=4  "4 spaces indent"
set smartindent
set autoindent
set showmatch

